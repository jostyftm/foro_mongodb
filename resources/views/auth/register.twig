{% extends "./layout/app.twig" %}

{% block content %}
    <div class="w-50 m-auto">
        <div class="bg-white shadow-sm p-3">
            <h4 class="text-center">Crea una cuenta</h4>
            <div>
                    <div class="alert alert-danger d-none" id="errorLoginMessage">
                    </div>
                <form action="{{ 'auth/register' | url }}" id="formRegister" method="POST" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <label for="">Nombre</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="pepito">
                    </div>
                    <div class="form-group">
                        <label for="">Correo electronico</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="pepito@mail.com">
                    </div>
                    <div class="form-group">
                        <label for="">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="************">
                    </div>
                    <div class="form-group">
                            <label for="">Confirmar contraseña</label>
                            <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="************">
                        </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" >
                            Crear cuenta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ 'js/classes/auth.js' | url }}"></script>
    <script src="{{ 'js/register.js' | url }}"></script>
{% endblock %}